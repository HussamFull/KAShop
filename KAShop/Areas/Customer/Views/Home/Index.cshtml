

<div class="text-center mb-5 g-1">

    <!--  <h1 class="display-4 text-primary fw-bold"> Category</h1>-->
    <h1 class="display-4 fw-bolder"> Category</h1>

    <p class="lead text-muted">Explore our diverse range of categories </p>
</div>

<div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">

        @foreach (var item in ViewBag.categories)
        {
            <div class="col">

                <div class="card h-100 shadow-sm border-0 transform-on-hover card-accent">

                    <div class="card-body text-center d-flex flex-column p-4">

                        <div class="icon-wrapper mb-3">

                            <i class="bi bi-folder-fill text-primary fa-3x"></i>
                        </div>
                        <h5 class="card-title text-dark mb-2">@item.Name</h5>
                        <p class="card-text text-muted flex-grow-1 small">

                            @item.Name
                        </p>
                        <a href="#" class="btn btn-outline-primary btn-sm mt-auto stretched-link">

                            Show details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>



</div>

<!-- Product Section-->

<div class="text-center mb-5 g-1">

    <!--  <h1 class="display-4 text-primary fw-bold"> Category</h1>-->
    <h1 class="display-4 fw-bolder"> Products</h1>

    <p class="lead text-muted">Explore our diverse range of products </p>
</div>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in ViewBag.products)
            {
                <div class="col mb-5  ">
                    <div class="card h-100 shadow-sm border-0 transform-on-hover card-accent">
                    <!-- Sale badge-->
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                    <!-- Product image-->
                        <img class="card-img-top" src="/images/@item.Image" alt="..." style="width: 220px; height: 100px; object-fit: cover;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- Product price-->
                                <span class="text-muted ">$@item.Price</span>
                                
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>









<style>
    /* يمكنك إضافة هذا الجزء إلى ملف CSS خاص بك أو داخل وسم <style> في الصفحة */
    .transform-on-hover {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .transform-on-hover:hover {
            transform: translateY(-8px) scale(1.02); /* رفع البطاقة أكثر وتكبيرها قليلاً */
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important; /* ظل أقوى وأكثر انتشارًا */
            z-index: 1; /* تأكد من ظهور البطاقة فوق الأخرى عند التكبير */
        }

    .icon-wrapper {
        color: #007bff; /* لون الأيقونة الافتراضي */
    }

    .card-accent {
        border-bottom: 5px solid transparent; /* شريط سفلي شفاف مبدئيًا */
        border-image: linear-gradient(to right, #007bff, #6f42c1); /* تدرج لوني */
        border-image-slice: 1; /* استخدم الشريط بالكامل */
        border-radius: .5rem; /* لجعل الزوايا مستديرة قليلاً مع الحدود */
        overflow: hidden; /* لضمان عدم خروج المحتوى عن الحدود */
    }

    .transform-on-hover:hover .card-accent {
        border-image: linear-gradient(to right, #28a745, #17a2b8); /* تغيير التدرج اللوني عند المرور */
        border-image-slice: 1;
    }

    /* تحسينات عامة للمظهر */
    body {
        background-color: #f8f9fa; /* لون خلفية فاتح للموقع */
    }
</style>